generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PRISMA_MONGO_URL")
}

model shopify_sessions {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  accessToken String
  id_         String  @map("id")
  isOnline    Boolean
  scope       String
  shop        String
  state       String
}

model merchants {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  accessToken     String
  plan            String
  shop            String    @unique(map: "shop_1")
  status          String
  subscriptionId  String
  scriptTagId     String
  createdAt       DateTime @db.Date
  updatedAt       DateTime @db.Date
}

model settings {
  id                    String       @id @default(auto()) @map("_id") @db.ObjectId
  shop                  String       @unique(map: "shop_1")
  createdAt             DateTime @db.Date
  updatedAt              DateTime @db.Date
}